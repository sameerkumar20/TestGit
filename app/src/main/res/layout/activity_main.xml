<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/id_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Second Activity"
        app:layout_constraintEnd_toEndOf="@+id/id_first"
        app:layout_constraintStart_toStartOf="@+id/id_first"
        app:layout_constraintTop_toBottomOf="@+id/id_first" />

    <Button
        android:id="@+id/id_fourth"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Fourth Activity"
        app:layout_constraintEnd_toEndOf="@+id/id_third"
        app:layout_constraintStart_toStartOf="@+id/id_third"
        app:layout_constraintTop_toBottomOf="@+id/id_third" />

    <Button
        android:id="@+id/id_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="First Activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/id_third"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Third Activity"
        app:layout_constraintEnd_toEndOf="@+id/id_second"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/id_second"
        app:layout_constraintTop_toBottomOf="@+id/id_second" />
</androidx.constraintlayout.widget.ConstraintLayout>